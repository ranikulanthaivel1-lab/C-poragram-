#include <stdio.h>

int main() {
    int total, perDay, days;

    printf("Enter total chocolates: ");
    scanf("%d", &total);

    printf("Enter chocolates per day: ");
    scanf("%d", &perDay);

    printf("Enter number of days: ");
    scanf("%d", &days);

    if (total >= perDay * days)
        printf("1 (Chocolates will last)");
    else
        printf("0 (Chocolates will not last)");

    return 0;
}
